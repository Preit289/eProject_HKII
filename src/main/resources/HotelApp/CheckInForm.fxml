<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="HotelApp.CheckInFormController"
      spacing="20" alignment="TOP_LEFT" styleClass="view-pane">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <fx:define>
        <ToggleGroup fx:id="childGroup"/>
        <ToggleGroup fx:id="foreignerGroup"/>
        <ToggleGroup fx:id="genderGroup"/>
    </fx:define>

    <TableView fx:id="tblGuests" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colGuestName" text="Guest name" prefWidth="150"/>
            <TableColumn fx:id="colRoomNumber" text="Room number" prefWidth="100"/>
            <TableColumn fx:id="colCapacity" text="Capacity" prefWidth="80"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colCheckIn" text="Check-in (Today)" prefWidth="120"/>
            <TableColumn fx:id="colCheckOut" text="Planned check-out" prefWidth="120"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Customer name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCustomerName" text="Lê Vân A" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Is child?" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="0">
            <RadioButton fx:id="rbChildYes" text="Yes" toggleGroup="$childGroup"/>
            <RadioButton fx:id="rbChildNo" text="No" selected="true" toggleGroup="$childGroup"/>
        </HBox>

        <Label text="Date of birth" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtDateOfBirth" promptText="DD/MM/YYYY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Is foreigner?" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="1">
            <RadioButton fx:id="rbForeignerYes" text="Yes" toggleGroup="$foreignerGroup"/>
            <RadioButton fx:id="rbForeignerNo" text="No" selected="true" toggleGroup="$foreignerGroup"/>
        </HBox>

        <Label text="Citizen identification number" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCitizenId" promptText="XXXX XXXX XXXX" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Gender" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="2">
            <RadioButton fx:id="rbMale" text="Male" selected="true" toggleGroup="$genderGroup"/>
            <RadioButton fx:id="rbFemale" text="Female" toggleGroup="$genderGroup"/>
        </HBox>

        <Label text="Phone number" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtPhoneNumber" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
    </HBox>
</VBox>
