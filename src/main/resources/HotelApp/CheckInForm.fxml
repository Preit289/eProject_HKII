<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelApp.CheckInFormController"
            prefWidth="900" prefHeight="560">

    <top>
        <Label fx:id="lblTitle" styleClass="page-title" text="Check-in Details"/>
    </top>

    <center>
        <GridPane hgap="8" vgap="8" styleClass="view-pane">
            <columnConstraints>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="30"/>
            </columnConstraints>

            <Label text="Booker"/>
            <TextField fx:id="txtBooker" GridPane.columnIndex="1"/>
            <Label text="Phone" GridPane.columnIndex="2"/>
            <TextField fx:id="txtPhone" GridPane.columnIndex="3"/>

            <Label text="Payment" GridPane.rowIndex="1"/>
            <ComboBox fx:id="cbPayment" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Deposit" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="txtDeposit" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

            <Label text="Actual Check-in" GridPane.rowIndex="2"/>
            <TextField fx:id="txtCheckinDate" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>
            <Label text="Actual Check-out" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="txtCheckoutDate" GridPane.columnIndex="3" GridPane.rowIndex="2" editable="false"/>

            <Label text="Rooms" styleClass="section-title" GridPane.rowIndex="3"/>
            <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button text="Add room"    onAction="#onAddRoom"    styleClass="button-secondary"/>
                <Button text="Remove room" onAction="#onRemoveRoom" styleClass="button-secondary"/>
            </HBox>

            <TableView fx:id="tblRooms" GridPane.rowIndex="4" GridPane.columnSpan="4" prefHeight="320" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colRoomNum" text="Room No" prefWidth="80"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="colQuality"  text="Quality"  prefWidth="100"/>
                    <TableColumn fx:id="colPrice"    text="Price"    prefWidth="80"/>
                    <TableColumn fx:id="colCustomer" text="Customer" prefWidth="120"/>
                    <TableColumn fx:id="colServices" text="Services" prefWidth="120"/>
                    <TableColumn fx:id="colAssign"   text="Assign Customer" prefWidth="100"/>
                    <TableColumn fx:id="colAssignService" text="Assign Service" prefWidth="100"/>
                    <TableColumn fx:id="colRemoveCustomer" text="Remove Customer" prefWidth="100"/>
                    <TableColumn fx:id="colRemoveService" text="Remove Service" prefWidth="100"/>
                    <TableColumn fx:id="colEditServiceQty" text="Edit Service Qty" prefWidth="100"/>
                </columns>
            </TableView>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8" style="-fx-padding: 10;" alignment="CENTER_RIGHT">
            <Button fx:id="btnPrint" text="Print" onAction="#onPrint" styleClass="button-secondary"/>
            <Button fx:id="btnDelete" text="Delete" onAction="#onDelete" styleClass="button-secondary"/>
            <Button fx:id="btnUpdate" text="Update" onAction="#onUpdate" styleClass="button-primary"/>
            <Button fx:id="btnClose" text="Close" onAction="#onClose" styleClass="button-secondary"/>
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
</BorderPane>