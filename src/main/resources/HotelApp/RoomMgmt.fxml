<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_LEFT" prefHeight="607.0" prefWidth="828.0" spacing="15" styleClass="view-pane"
    xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="HotelApp.RoomMgmtController">

    <!-- Form  -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
            <ColumnConstraints minWidth="150.0" />
            <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
            <ColumnConstraints minWidth="150.0" />
        </columnConstraints>

        <children>
            <!-- Hàng 0 -->
            <Label text="Room Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtRoomNumber" promptText="e.g. 101" GridPane.columnIndex="1"
                GridPane.rowIndex="0" />

            <Label text="Category:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <ChoiceBox fx:id="cbCategory" prefHeight="26.0" prefWidth="150.0"
                GridPane.columnIndex="3" GridPane.rowIndex="0" value="none">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Single" />
                        <String fx:value="Double" />
                        <String fx:value="Suite" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <!-- Hàng 1 -->
            <Label text="Price (VND):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtPrice" promptText="Enter price" GridPane.columnIndex="1"
                GridPane.rowIndex="1" />

            <Label text="Quality:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="cbQuality" prefHeight="26.0" prefWidth="150.0"
                GridPane.columnIndex="3" GridPane.rowIndex="1" value="none">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Standard" />
                        <String fx:value="Superior" />
                        <String fx:value="Deluxe" />
                        <String fx:value="Premium" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <!-- Hàng 2 -->
            <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="cbStatus" prefHeight="26.0" prefWidth="150.0" GridPane.columnIndex="3"
                GridPane.rowIndex="2" value="none">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Available" />
                        <String fx:value="Occupied" />
                        <String fx:value="Cleaning" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </children>

        <padding>
            <Insets top="10.0" />
        </padding>
    </GridPane>


    <!-- Buttons -->
    <VBox spacing="10">
        <HBox spacing="10">
            <Button onAction="#onAddRoom" styleClass="button-primary" stylesheets="@styles.css"
                text="Add Room">
                <graphic>
                    <FontIcon iconLiteral="fa-plus-circle" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onUpdateRoom" styleClass="button-primary" stylesheets="@styles.css"
                text="Update">
                <graphic>
                    <FontIcon iconLiteral="fa-edit" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onDeleteRoom" styleClass="button-primary" stylesheets="@styles.css"
                text="Delete">
                <graphic>
                    <FontIcon iconLiteral="fa-trash" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onClear" styleClass="button-primary" stylesheets="@styles.css"
                text="Clear">
                <graphic>
                    <FontIcon iconLiteral="fa-eraser" styleClass="btn-icon" />
                </graphic>
            </Button>
        </HBox>

        <Button onAction="#onManageAmenities" styleClass="button-secondary"
            stylesheets="@styles.css" text="Manage Room Types &amp; Amenities">
            <graphic>
                <FontIcon iconLiteral="fa-list-ul" styleClass="btn-icon" />
            </graphic>
        </Button>
    </VBox>

    <!-- Table  -->
    <TableView fx:id="tblRooms" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colRoomId" prefWidth="100" text="Room ID" />
            <TableColumn fx:id="colRoomNum" prefWidth="100" text="Room No." />
            <TableColumn fx:id="colCategory" prefWidth="100" text="Category" />
            <TableColumn fx:id="colQuality" prefWidth="100" text="Quality" />
            <TableColumn fx:id="colPrice" prefWidth="100" text="Price (VND)" />
            <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
            <TableColumn fx:id="colAmenities" prefWidth="150" text="Amenities" />
            <TableColumn fx:id="colCapacity" prefWidth="80" text="Capacity" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>