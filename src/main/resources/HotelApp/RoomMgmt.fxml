<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" spacing="20" styleClass="view-pane"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="HotelApp.RoomMgmtController">

    <!-- Form -->
    <GridPane hgap="12" vgap="10" alignment="CENTER" maxWidth="800.0">
        <columnConstraints>
            <!-- Label trái -->
            <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
            <!-- Field trái -->
            <ColumnConstraints minWidth="180.0" hgrow="ALWAYS" />
            <!-- Label phải -->
            <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
            <!-- Field phải -->
            <ColumnConstraints minWidth="180.0" hgrow="ALWAYS" />
        </columnConstraints>

        <children>
            <!-- Row 0 -->
            <Label text="Room Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtRoomNumber" promptText="e.g. 101"
                GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0" />

            <Label text="Quality:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <ChoiceBox fx:id="cbQuality" GridPane.columnIndex="3" GridPane.rowIndex="0"
                prefWidth="200.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Standard" />
                        <String fx:value="Superior" />
                        <String fx:value="Deluxe" />
                        <String fx:value="Premium" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <!-- Row 1 -->
            <Label text="Price (VND):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtPrice" promptText="Enter price"
                GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />

            <Label text="Category:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="cbCategory" GridPane.columnIndex="3" GridPane.rowIndex="1"
                prefWidth="200.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Single" />
                        <String fx:value="Double" />
                        <String fx:value="Suite" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <!-- Row 2 -->
            <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="cbStatus" GridPane.columnIndex="3" GridPane.rowIndex="2"
                prefWidth="200.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Available" />
                        <String fx:value="Occupied" />
                        <String fx:value="Cleaning" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </children>
    </GridPane>


    <!-- Buttons -->
    <VBox spacing="12" alignment="CENTER">
        <HBox spacing="12" alignment="CENTER">
            <Button onAction="#onAddRoom" styleClass="button-primary" text="Add Room">
                <graphic>
                    <FontIcon iconLiteral="fa-plus-circle" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onUpdateRoom" styleClass="button-primary" text="Update">
                <graphic>
                    <FontIcon iconLiteral="fa-edit" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onDeleteRoom" styleClass="button-primary" text="Delete">
                <graphic>
                    <FontIcon iconLiteral="fa-trash" styleClass="btn-icon" />
                </graphic>
            </Button>
            <Button onAction="#onClear" styleClass="button-primary" text="Clear">
                <graphic>
                    <FontIcon iconLiteral="fa-eraser" styleClass="btn-icon" />
                </graphic>
            </Button>
        </HBox>

        <Button onAction="#onManageAmenities" styleClass="button-secondary"
            text="Manage Room Types - Amenities">
            <graphic>
                <FontIcon iconLiteral="fa-list-ul" styleClass="btn-icon" />
            </graphic>
        </Button>
    </VBox>

    <!-- Table -->
    <TableView fx:id="tblRooms" VBox.vgrow="ALWAYS" prefHeight="500">
        <columns>
            <TableColumn fx:id="colRoomId" prefWidth="100" text="Room ID" />
            <TableColumn fx:id="colRoomNum" prefWidth="100" text="Room No." />
            <TableColumn fx:id="colCategory" prefWidth="100" text="Category" />
            <TableColumn fx:id="colQuality" prefWidth="100" text="Quality" />
            <TableColumn fx:id="colPrice" prefWidth="100" text="Price (VND)" />
            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
            <TableColumn fx:id="colAmenities" prefWidth="150" text="Amenities" />
            <TableColumn fx:id="colCapacity" prefWidth="100" text="Capacity" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>