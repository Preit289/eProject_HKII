<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="AnchorPane" prefHeight="1200" prefWidth="750" styleClass="mainFxmlClass" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="HotelApp.MainController">
    <!-- Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <children>
                <Label text="Hotel Manager" styleClass="brand" />
                <Button text="Dashboard" onAction="#showDashboard" styleClass="nav-btn" />
                <Button text="Booking" onAction="#showBooking" styleClass="nav-btn" />
                <Button text="Check-in/Check-out" onAction="#showCheckin" styleClass="nav-btn" />
                <Button text="Customers Management" onAction="#showCustomers" styleClass="nav-btn" />
                <Button text="Services Management" onAction="#showServices" styleClass="nav-btn" />
                <!-- admin -->
                <Button fx:id="btnRoomManagement" onAction="#showRoomManagement" styleClass="nav-btn" text="Room Management" />
                <Button fx:id="btnAdminDashboard" onAction="#showAdminDashboard" styleClass="nav-btn" text="Admin Dashboard" />
            </children>
            <padding>
                <Insets bottom="20" left="12" right="12" top="20" />
            </padding>
        </VBox>
    </left>

    <!-- Header -->
    <top>
        <HBox spacing="10" styleClass="header">
            <children>
                <Label fx:id="pageTitle" styleClass="page-title" text="Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <MenuButton styleClass="button-secondary" text="Account">
                    <items>
                        <MenuItem onAction="#onLogout" text="Logout" />
                    </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="12" left="16" right="16" top="12" />
            </padding>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area" BorderPane.alignment="CENTER" />
    </center>

    <!-- Status bar -->
    <bottom>
        <HBox styleClass="statusbar">
            <children>
                <Label fx:id="statusLabel" text="Ready" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Hotel Management v1.0" />
            </children>
            <padding>
                <Insets bottom="6" left="12" right="12" top="6" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
