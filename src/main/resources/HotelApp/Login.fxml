<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="551.0" prefWidth="467.0" spacing="15" styleClass="view-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HotelApp.LoginController">

    <Label alignment="TOP_CENTER" prefHeight="37.0" prefWidth="291.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Hotel Management Login" />
   <HBox alignment="CENTER" prefHeight="200.0" prefWidth="467.0">
      <children>
      
          <VBox alignment="CENTER_LEFT" prefHeight="202.0" prefWidth="301.0" spacing="10">
              <children>
               <Label text="User name" />
                  <TextField fx:id="usernameField" prefHeight="20.0" prefWidth="200.0" promptText="Username">
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </TextField>
               <Label text="Password" />
                  <PasswordField fx:id="passwordField" prefHeight="20.0" prefWidth="200.0" promptText="Password" />
              </children>
            <HBox.margin>
               <Insets left="50.0" right="50.0" />
            </HBox.margin>
          </VBox>
      </children>
   </HBox>
      <Button fx:id="loginButton" alignment="CENTER" onAction="#onLogin" prefWidth="100" text="Login" />
</VBox>
