<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="15"
      styleClass="view-pane"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="HotelApp.ChangePasswordController">

    <!-- Title -->
    <Label alignment="TOP_CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold;"
           text="Change Your Password" />

    <HBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0">
        <children>
            <VBox alignment="CENTER_LEFT" spacing="10" prefHeight="180.0" prefWidth="280.0">
                <children>
                    <Label text="New Password" />
                    <PasswordField fx:id="txtNewPassword" prefHeight="20.0" prefWidth="200.0"
                                   promptText="Enter new password">
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                    </PasswordField>

                    <Label text="Confirm Password" />
                    <PasswordField fx:id="txtConfirmPassword" prefHeight="20.0" prefWidth="200.0"
                                   promptText="Re-enter new password" />

                    <!-- Error Label -->
                    <Label fx:id="errorLabel"
                           textFill="red"
                           wrapText="true"
                           managed="false" visible="false"/>
                </children>
                <HBox.margin>
                    <Insets left="50.0" right="50.0" />
                </HBox.margin>
            </VBox>
        </children>
    </HBox>

    <!-- Update Button -->
    <Button text="Update" onAction="#onChangePassword" prefWidth="100" alignment="CENTER"/>
</VBox>
