<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20" alignment="CENTER" styleClass="view-pane"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="HotelApp.ServicesController">

    <!-- Input Form -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <!-- Label column -->
            <ColumnConstraints halignment="RIGHT" minWidth="120" prefWidth="130"/>
            <!-- Field column -->
            <ColumnConstraints minWidth="250" prefWidth="300" hgrow="NEVER"/>
            <!-- Label column -->
            <ColumnConstraints halignment="RIGHT" minWidth="120" prefWidth="130"/>
            <!-- Field column -->
            <ColumnConstraints minWidth="250" prefWidth="300" hgrow="NEVER"/>
        </columnConstraints>

        <children>
            <Label text="Service Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtServiceName" prefWidth="250"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Price (VND):" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtServicePrice" prefWidth="250"
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="txtServiceDescription"
                      prefHeight="80" prefRowCount="3" prefWidth="600"
                      wrapText="true"
                      GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1"/>
        </children>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <children>
            <Button onAction="#onAdd" styleClass="button-primary" stylesheets="@styles.css" text="Add">
                <graphic>
                    <FontIcon iconLiteral="fa-plus-circle" styleClass="btn-icon"/>
                </graphic>
            </Button>
            <Button onAction="#onUpdate" styleClass="button-primary" stylesheets="@styles.css" text="Update">
                <graphic>
                    <FontIcon iconLiteral="fa-edit" styleClass="btn-icon"/>
                </graphic>
            </Button>
            <Button onAction="#onDelete" styleClass="button-primary" stylesheets="@styles.css" text="Delete">
                <graphic>
                    <FontIcon iconLiteral="fa-trash" styleClass="btn-icon"/>
                </graphic>
            </Button>
            <Button onAction="#onClear" styleClass="button-primary" stylesheets="@styles.css" text="Clear">
                <graphic>
                    <FontIcon iconLiteral="fa-eraser" styleClass="btn-icon"/>
                </graphic>
            </Button>
        </children>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblServices" prefHeight="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colServiceId" prefWidth="100" text="ID"/>
            <TableColumn fx:id="colServiceName" prefWidth="200" text="Service Name"/>
            <TableColumn fx:id="colServicePrice" prefWidth="150" text="Price (VND)"/>
            <TableColumn fx:id="colServiceDescription" prefWidth="300" text="Description"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
